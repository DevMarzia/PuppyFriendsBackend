spring.application.name=PuppyFriendBackend

# Connessione al DB
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/nome_db
SPRING_DATASOURCE_USERNAME= username
SPRING_DATASOURCE_PASSWORD= password
# se invece di update inserisco create, ad ogni riavvio dell'app il databaase si ripulisce
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# Visualizzazione query (Ã¨ utile per il debug)
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# JWT Configuration
# Chiave segreta (usata per firmare i token)
app.jwt-secret=chiave_32bit_inventata
# Durata del token in millisecondi (86400000 = 24 ore)
app.jwt-expiration-milliseconds=86400000

# Cloudinary Configuration
cloudinary.cloud_name= username
cloudinary.api_key= chiave_pubblica
cloudinary.api_secret= chiave_privata

# Email Configuration (Mailtrap)
SPRING_MAIL_HOST= sandbox.smtp.mailtrap.io
SPRING.MAIL.PORT=2525
SPRING_MAIL_USERNAME= username
SPRING_MAIL_PASSWORD= password
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
